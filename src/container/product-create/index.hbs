{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class="main">
    <form method="POST" action="/product-create">
        <section class="order_body">
            <h1>Новый товар</h1>
            <div class="input_field">
                {{> field name='name' text='Название'}}
            </div>
            <div class="description">
                <div>
                    <div for="">Описание</div>
                    <textarea name="description" rows="3" type="text"></textarea>
                </div>
            </div>
            <div class="input_field">
                {{> field name='price' text='Цена'}}
            </div>
            <div class="checkboxs">
                <input type="checkbox" name="readyTo">Готов к отправке
            </div>
            <div class="checkboxs">
                <input type="checkbox" name="topToSales">Топ продаж
            </div>
            {{> button text='Добавить'}}
        </section>
    </form>
</main>


